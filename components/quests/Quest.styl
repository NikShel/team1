.quest-info
    background-color #fff
    margin 72px 30px

    &__name
        font 600 2em 'Graphik Web', Helvetica, Arial, sans-serif
        color #303133
        text-transform uppercase
        text-align center

    &__description
        padding 10px 20px
        margin 50px 0
        color #8e8d8d
        font-size 18px
        line-height 1.75

    &__meta-inf-wrap
        text-align center

    &__meta-inf-wrap div
        display inline-block
        letter-spacing 0.05em
        text-transform uppercase
        font-size 12px
        color #8e8d8d

    &__author span,
    &__city span
        margin 0 14px
        font-weight 400

    &__author a,
    &__author a:hover,
    &__author a:active
        color #8e8d8d
        outline 0
        border 0
        text-decoration none

    &__author a:hover
        color #1080d0

    &__line
        border-color #eaeaea
        margin 18px 0
        border 0
        border-top-width 1px
        border-style solid
        box-sizing content-box
        height 0
        color rgba(0, 0, 0, .15)

    &__bottom-meta-inf-wrap
        text-align right
        margin-top 50px

    &__post-like
        color: #777
        cursor pointer
        font-size 15px

    &__post-like:hover
        color #1080d0

.photo-list
    padding 0
    display flex
    flex-wrap wrap

    &__item
        display: flex;
        padding: 0.5em;
        width: 100%;

    &__content
        display: flex;
        flex-direction: column;
        background-color: #fff;
        padding: 1em;
        width: 100%

    &__content img
        max-width 400px

.photo-list ul
    padding-left 0

.fa-heart,
.fa-heart-o
    margin-right 6px

.quest-form
    &__container
        text-align right

    &__edit-button,
    &__delete-button
        font 300 20px 'Graphik Web', Helvetica, Arial, sans-serif
        text-transform uppercase
        letter-spacing 1px
        line-height 40px
        outline none
        border-radius 3px
        border 1px solid #cfcece
        color #8e8d8d
        background #fff
        cursor pointer
        padding 0 15px
        margin-top 10px
        height 45px
        margin-left 10px

    &__edit-button:hover,
    &__delete-button:hover
        background-color #f3f3f3
