.quest-form
    display flex
    flex-direction column
    margin 40px 20px

    color #777
    font 300 1em 'Graphik Web', Helvetica, Arial, sans-serif
    line-height 1.5

    &__name,
    &__city,
    &__description
        font 300 1em 'Graphik Web', Helvetica, Arial, sans-serif
        line-height 35px
        color #777
        margin 6px 0
        padding 10px 20px
        outline-color #fe7877
        background-color #f4f4f4
        border-radius 3px
        border 1px solid #ebebeb
        height 45px
        width 100%
        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
        margin-bottom 20px

    &__description
        display block
        width 100%
        font 300 1em 'Graphik Web', Helvetica, Arial, sans-serif
        margin-top 9px
        line-height 1.75
        color #777
        box-sizing border-box
        outline none
        padding 15px 20px
        border-radius 3px
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
        resize none
        -webkit-appearance none
        min-height 150px

    &__save-button
        margin 0
        font 400 .68em 'Graphik Web', Helvetica, Arial, sans-serif
        text-transform uppercase
        letter-spacing 1px
        line-height 45px
        color #fff
        background-color #fe7877
        outline none
        border none
        border-radius 3px
        cursor pointer
        padding 0 20px
        margin-top 10px
        height 45px

