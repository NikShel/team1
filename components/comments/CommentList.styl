.comment-list
    &__header
        font 600 .8em 'Graphik Web', Helvetica, Arial, sans-serif
        color #303133
        text-transform uppercase
        letter-spacing: 0.05em;
        margin 30px 0

    &__line
        border-color #eaeaea
        margin 18px 0
        border 0
        border-top-width 1px
        border-style solid
        box-sizing content-box
        height 0
        color rgba(0, 0, 0, .15)

    &__container
        text-align right

    &__text-field
        margin-top 30px
        width 100%
        font 300 .9em 'Graphik Web', Helvetica, Arial, sans-serif
        line-height 1.75
        color #a9a9a9
        padding 15px 20px
        outline none
        border-radius 3px
        border 1px solid #cfcece
        box-sizing border-box
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
        resize none
        -webkit-appearance none
        min-height 110px

    &__add-button
        font 400 .68em 'Graphik Web', Helvetica, Arial, sans-serif
        text-transform uppercase
        letter-spacing 1px
        line-height 45px
        color #fff
        background-color #fe7877
        outline none
        border none
        border-radius 3px
        cursor pointer
        padding 0 20px
        margin-top 10px
        height 45px
